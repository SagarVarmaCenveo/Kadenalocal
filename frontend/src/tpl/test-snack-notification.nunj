{% extends "layouts/default.nunj" %}
{% from "macro/breadcrumb.nunj" import breadcrumb %}
{% from "macro/sidebar.nunj" import sidebar %}
{% from "macro/select.nunj" import select %}
{% import "macro/svg.nunj" as svg %}
{% import "macro/dialog.nunj" as dialog %}

{% set title = "Test" %}

{% block content %}

  {{ sidebar('Products') }}

  <div class="content">
    <div class="content__inner">
      <div class="content-header">
        <div class="content-header__inner">
          <h1 class="content-header__page-name">Test Snack notification</h1>
        </div>
        {{ breadcrumb(['Home','Test']) }}
      </div>
      <div class="content-block">
        <button onclick="notification.addNotification('info');" type="button" class="btn-action">Show info</button>
        <button onclick="notification.addNotification('warning');" type="button" class="btn-info">Show warning</button>
        <button onclick="notification.addNotification('error');" type="button" class="btn-main">Show error</button>
        <button onclick="notification.addNotification('success');" type="button" class="btn-success">Show success</button>
      </div>
    </div>
  </div>

{% endblock %}
